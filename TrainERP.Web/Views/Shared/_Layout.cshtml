@model TrainERP.Web.PageModels.LayoutModel
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="@Url.Content("~/Content/shared.css")" rel="stylesheet" type="text/css" />
    @*    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>*@
    <script src="http://libs.baidu.com/jquery/1.10.2/jquery.min.js" language="javascript"></script>
    @RenderSection("MenuHead", false)
    <style type="text/css">
        #header_wrapper
        {
            background-color:#0078b1;
        }
        #header,#body,#footer
        {
            width: 1000px;
            margin-left:auto;
            margin-right:auto;
        }
        
        #header
        {
            height: 100px;
        }
        
        #body
        {
            min-height: 500px;
        }
        
        #footer
        {
            height: 80px;
        }
    </style>
</head>
<body>
    <div id="header_wrapper">
        <div id="header">
        </div>
    </div>
    <div id="body_wrapper">
        <div id="body">
            @RenderBody()
        </div>
    </div>
    <div id="footer_wrapper">
        <div id="footer">
        </div>
    </div>
</body>
</html>
