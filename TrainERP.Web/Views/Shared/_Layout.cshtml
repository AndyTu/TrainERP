@model TrainERP.Web.PageModels.LayoutModel
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="@Url.Content("~/Content/shared.css")" rel="stylesheet" type="text/css" />
    @*    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>*@
    <script src="http://libs.baidu.com/jquery/1.10.2/jquery.min.js" type="text/javascript"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.13.0/jquery.validate.js"
        type="text/javascript"></script>
    @RenderSection("MenuHead", false)
    <style type="text/css">
        #header_wrapper
        {
            background-color: #0078b1;
        }
        
        #body_wrapper
        {
            overflow: auto;
            position: fixed;
            left: 0;
            right: 0;
            top: 60px;
            bottom: 31px;
            min-height:50px;
        }
        
        #footer_wrapper
        {
            border-top: 1px solid #ccc;
            position: fixed;
            left: 0;
            right: 0;
            bottom: 0;
        }
        
        #header, #footer
        {
            width: 1000px;
            margin-left: auto;
            margin-right: auto;
        }
        
        #header
        {
            height: 60px;
        }
        
        #footer
        {
            height: 30px;
        }
    </style>
</head>
<body>
    <div id="header_wrapper">
        <div id="header">
        </div>
    </div>
    <div id="body_wrapper">
            @RenderBody()
    </div>
    <div id="footer_wrapper">
        <div id="footer">
            footer
        </div>
    </div>
</body>
</html>
