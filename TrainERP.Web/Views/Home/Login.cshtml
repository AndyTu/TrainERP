@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "登录";
}
<style type="text/css">
    #login_block
    {
        margin-top: 130px;
        width: 1000px;
    }
    
    #caption_block
    {
        width: 549px;
        height: 350px;
        float: left;
    }
    
    #loginform_block
    {
        height: 350px;
        float: left;
        border-left: 1px solid #ccc;
        padding-left: 30px;
        padding-top: 3px;
    }
    
    h1
    {
        font-weight: normal;
    }
</style>
<div id="login_block" class="clearfix">
    <div id="caption_block">
    </div>
    <div id="loginform_block">
        <h1>
            登录</h1>
        <form id="loginForm" method="post" action="">
        <table>
            <tbody>
                <tr>
                    <th>
                        <label for="UserName">
                            用户名</label>
                    </th>
                    <td>
                        <input id="UserName" name="UserName" type="text" value="" class="valid">
                    </td>
                </tr>
                <tr>
                    <th>
                        <label for="Password">
                            密码</label>
                    </th>
                    <td>
                        <input id="Password" name="Password" type="password">
                    </td>
                </tr>
                <tr>
                    <th>
                    </th>
                    <td>
                        <input name="RememberMe" type="checkbox" value="true">
                        <label for="UserName">
                            记住我的登录状态</label>
                    </td>
                </tr>
                <tr>
                    <th>
                    </th>
                    <td>
                        <button type="submit">
                            登录</button>
                    </td>
                </tr>
            </tbody>
        </table>
        </form>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        var validate = $("#loginForm").validate();
    });
</script>
